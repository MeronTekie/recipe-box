@{
  Layout ="_Layout";

}

<h2>Here iis the details:</h2>

@model RecipeBox.Models.Category

@Html.DisplayNameFor(model =>model.Name):@Html.DisplayFor(model =>model.Name)

@if(@Model.JoinEntities.Count ==0)
{
  <p>This category doen not have any Items</p>
}
else
{
  <h4> Items thaat the category contains are:</h4>
  <ul>
    @foreach( var join in Model.JoinEntities)
    {
      <li> @join.Recipe.DishName</li>
      <li> @join.Recipe.Origin</li>
      <li> @join.Recipe.Ingredients</li>
      <li> @join.Recipe.Instructions</li>
      <li> @join.Recipe.EstimatedCost</li>
    }
  </ul>
}
<h4>@Html.ActionLink("Back to Categories","Index")</h4>
<h4>@Html.ActionLink("Edit Category","Edit",new {id=Model.CategoryId})</h4>
<h4>@Html.ActionLink("Delete Category","Delete",new {id=Model.CategoryId})</h4>
